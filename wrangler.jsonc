{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "ai-trade-decision-pipeline",
	"main": "src/index.ts",
	"compatibility_date": "2025-11-01",
	"observability": {
		"enabled": true
	},
	// Environment variables (non-secret)
	"vars": {
		"BITGET_ACCOUNT_TYPE": "usdt-futures",
		"AI_MODEL": "gpt-4o-mini",
		"AI_BASE_URL": "https://api.openai.com/v1",
		"COINDESK_API_BASE" : "https://data-api.coindesk.com" ,
		"COINDESK_NEWS_LIST_PATH" : "/news/v1/article/list",
		"COINDESK_NEWS_SINGLE_PATH" : "/news/v1/article/get",
		"NEWS_LOOKBACK_HOURS" : "12",
		"NEWS_MAX_ARTICLES" : "25",         
		"TRADE_WINDOW_MINUTES": 30
	},
	// KV namespace
	"kv_namespaces": [
		{
			"binding": "DECISIONS",
			"id": "b777ca45333f44728b57a1aea811ead8",
			"remote": true
		}
	],
	// Node compat (needed for crypto, etc)
	"compatibility_flags": [
		"nodejs_compat"
	]
}
