{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "crons": [
    { "path": "/api/analyze?symbol=BTCUSDT&dryRun=false", "schedule": "0 * * * *" },
    { "path": "/api/analyze?symbol=XAUUSDT&dryRun=false", "schedule": "0 * * * *" },
    { "path": "/api/evaluate?symbol=BTCUSDT", "schedule": "0 0 * * *" },
    { "path": "/api/evaluate?symbol=XAUUSDT", "schedule": "0 0 * * *" }
  ]
}
